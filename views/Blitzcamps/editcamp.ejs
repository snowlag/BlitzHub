<%- include("../partials/header") %>
<div class="container">
 <h1 style="margin: 3% auto; text-align: center;">Add Campground</h1>
 <div style="width : 40%; margin: 2% auto">
 <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="Location">Loacation</label>
      <input type="text" class="form-control" name="camp[name]" id="Location"  value="<%= campground.name %>">
    </div>
    <div class="form-group">
      <label for="imageUrl">Image Url</label>
      <input type="text" class="form-control" id="ImageUrl" value="<%= campground.image %>" name="camp[image]">
    </div>
  <div class="form-group">
      <label for="cost">Cost</label>
      <input class="form-control" type="number" name="camp[cost]" id="cost" value="<%= campground.cost %>" step="100" min="0" required>
      <small>Enter the cost per night in Indian rupees</small>
  </div>
  <div class="form-group">
    <label for="location">Location</label>
    <input class="form-control" type="text" name="camp[location]" id="location" value="<%= campground.location %>">
  </div>
    <div class="form-group">
      <label for="Description">Description</label>
      <textarea  class="form-control" id="description" name="camp[description]"><%= campground.description %></textarea>
    </div>
    <button type="submit" class="btn btn-primary btn-block">UPDATE</button>
 </form>
 <a  href="/campgrounds">view Campgrounds</a>
 </div>

 
</div>
<%- include("../partials/footer") %>